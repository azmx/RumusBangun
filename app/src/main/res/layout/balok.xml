<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".bangunRuang.balok">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menghitung Luas Balok"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/beam"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:inputType="number"
        android:id="@+id/panjangBalok"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Masukan Panjang"/>

    <EditText
        android:inputType="number"
        android:id="@+id/lebarBalok"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Masukan Lebar"/>

    <EditText
        android:inputType="number"
        android:id="@+id/tinggiBalok"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Masukan Tinggi"/>
    <TextView
        android:id="@+id/tvhasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="hasil"/>
    <Button
        android:id="@+id/btnhitung"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hitung"/>
</LinearLayout>