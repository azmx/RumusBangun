<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".bangunDatar.persegiPanjang">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menghitung Luas Persegi Panjang"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@drawable/rectangle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        />
    <EditText
        android:id="@+id/Panjang_Persegi_panjang"
        android:inputType="number"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Masukan Panjang"/>

 <EditText
        android:id="@+id/Lebar_Persegi_panjang"
        android:inputType="number"
        android:layout_width="152dp"
        android:layout_height="72dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:hint="Masukan Lebar"/>



    <TextView
        android:id="@+id/tvhasil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="20dp"
        android:text="hasil"/>
    <Button
        android:id="@+id/btnhitung"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Hitung"/>
</LinearLayout>